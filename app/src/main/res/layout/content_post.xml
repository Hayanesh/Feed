<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hayanesh.feeder.Post"
    tools:showIn="@layout/activity_post">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="-5dp"
                android:elevation="22dp">
                <ImageView
                    android:id="@+id/photo_post"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp" />
            </android.support.v7.widget.CardView>
            <ViewSwitcher
                android:layout_gravity="bottom"
                android:id="@+id/color_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                    android:id="@+id/dot_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    app:amount="3"
                    app:duration="@android:integer/config_mediumAnimTime"
                    app:endColor="@color/colorPrimaryDark"
                    app:startColor="@color/colorAccent"
                    app:animationDirection="left"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:id="@+id/color_palette">
                    <View
                        android:id="@+id/view1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view3"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view4"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view5"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view6"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                    <View
                        android:id="@+id/view7"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">
                    </View>
                </LinearLayout>
            </ViewSwitcher>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Description"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.5"/>
                    <EditText
                        android:layout_below="@id/textview"
                        android:id="@+id/description"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textShortMessage"
                        android:typeface="sans"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="8dp" />
                    <Switch
                        android:alpha="0.5"
                        android:padding="4dp"
                        android:text="Tags  "
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description"
                        android:id="@+id/switch1"
                        android:elevation="0dp" />
                    <RelativeLayout
                        android:layout_below="@+id/switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/TagView">
                        <View
                            android:layout_marginTop="4dp"
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"
                            android:alpha="0.5"
                            ></View>
                        <TextView
                            android:layout_below="@id/line"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/textview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Tags :-"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="5dp"
                            android:alpha="0.5"/>
                        <ViewSwitcher
                            android:layout_below="@+id/textview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tag_switcher">
                            <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                                android:id="@+id/dot_progress_bar2"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                app:amount="3"
                                app:duration="@android:integer/config_mediumAnimTime"
                                app:endColor="@color/colorPrimaryDark"
                                app:startColor="@color/colorAccent"
                                app:animationDirection="left"/>
                            <me.gujun.android.taggroup.TagGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                app:atg_borderColor="@color/colorPrimary"
                                app:atg_backgroundColor="@android:color/white"
                                app:atg_textColor="@color/colorPrimaryDark"
                                app:atg_checkedBackgroundColor="@color/blue_200"
                                app:atg_checkedMarkerColor="@color/white"
                                android:clickable="true"
                                app:atg_verticalPadding="6dp"
                                app:atg_horizontalPadding="15dp"
                                app:atg_textSize="12sp"
                                app:atg_horizontalSpacing="5dp"
                                android:visibility="visible"
                                app:atg_isAppendMode="true"
                                android:id="@+id/tag_group"
                                />
                        </ViewSwitcher>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- <Switch
                 android:text="Description "
                 android:alpha="0.7"
                 android:textAlignment="textEnd"
                 android:textColor="@android:color/white"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/switch1" />
             <android.support.design.widget.TextInputLayout
